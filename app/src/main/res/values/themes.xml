<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScrollableApplication" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1e000000</item>
        <!-- Customize your theme here. -->

        <item name="actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="android:actionBarStyle">@style/AppTheme.MyActionBar</item>
    </style>
    
    <style name="AppTheme.MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/AppTheme.MyActionBarTitleText</item>

        <item name="elevation">10dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">10dp</item>
    </style>

    <style name="AppTheme.MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="AppTheme.MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/text_black</item>
    </style>
</resources>